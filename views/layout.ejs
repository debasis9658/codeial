<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
        
        <link rel="stylesheet" href="/css/layout.css">
        
        <link rel="stylesheet" href="/css/header.css">

        <link rel="stylesheet" href="/css/footer.css">

        <link rel="stylesheet" href="/css/sign-up.css">

        <link rel="stylesheet" href="/css/sign-in.css">
        
        <link rel="stylesheet" href="/css/toggle-button.css">
        
        <%- style %>

    </head>

    <body>
        <%- include('_header'); %>
        
        <main id="layout-main">
            <%- body %>
        </main>

        <%- include('_footer'); %>

        <%- script %>

        <script>
            <% if(flash.success && flash.success.length > 0) { %>
                new Noty({
                    theme: 'relax',
                    text: '<%= flash.success %>',
                    type: 'success',
                    layout: 'topRight',
                    timeout: 1500
                }).show();
            <% } %>
            
            <% if(flash.error && flash.error.length > 0) { %>
                new Noty({
                    theme: 'relax',
                    text: '<%= flash.error %>',
                    type: 'error',
                    layout: 'topRight',
                    timeout: 1500
                }).show();
            <% } %>
        </script>

        <script>
            window.addEventListener('scroll', function() {
            var footer = document.getElementById('layout-footer');
            var scrollPosition = window.pageYOffset || document.documentElement.scrollTop;

            // Calculate the distance between the bottom of the content and the bottom of the viewport
            var contentHeight = document.documentElement.scrollHeight;
            var viewportHeight = window.innerHeight;
            var distanceToBottom = contentHeight - scrollPosition - viewportHeight;

            // Show/hide the footer based on the distance to the bottom
            if (distanceToBottom < 20) { // Adjust the threshold as needed
                footer.style.display = 'block';
            } else {
                footer.style.display = 'none';
            }
            });
        </script>

    </body>
</html>